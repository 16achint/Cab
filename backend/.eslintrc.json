{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "rules": {
        "padding-line-between-statements": [
            "error",
            { "blankLine": "always", "prev": "import", "next": "function" },
            { "blankLine": "always", "prev": "function", "next": "function" }
        ]
    }
}
